{
  "name": "frankenstein-dotnet-react",
  "version": "1.0.0",
  "description": "Demo app to illustrate an iterative migration of a legacy ASP.NET MVC app to React",
  "main": "index.js",
  "scripts": {
    "start": "webpack s --config ./webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --progress --config ./webpack.prod.js",
    "lint:all": "npm run lint:js && npm run lint:css",
    "lint:js": "tsc --noEmit && eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "prettier:check": "prettier --check --ignore-unknown \"src/**/*\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "cd ../../ && husky install Frankenstein/App/.husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tysonnero/frankenstein-dotnet-react.git"
  },
  "keywords": [
    "ASP.NET",
    "MVC",
    "dotnet",
    "React",
    "TypeScript",
    "Redux"
  ],
  "author": "Tyson Nero",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tysonnero/frankenstein-dotnet-react/issues"
  },
  "homepage": "https://github.com/tysonnero/frankenstein-dotnet-react#readme",
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet-async": "1.1.2",
    "react-router-dom": "5.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.15.7",
    "@babel/core": "7.15.5",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/plugin-transform-runtime": "7.15.0",
    "@babel/preset-env": "7.15.6",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.15.0",
    "@testing-library/jest-dom": "5.14.1",
    "@types/jest": "27.0.2",
    "@types/react": "17.0.24",
    "@types/react-dom": "17.0.9",
    "@types/react-router-dom": "5.3.0",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "babel-jest": "27.2.1",
    "babel-loader": "8.2.2",
    "clean-webpack-plugin": "4.0.0",
    "cross-env": "7.0.3",
    "css-loader": "6.3.0",
    "css-minimizer-webpack-plugin": "3.0.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.26.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "fork-ts-checker-webpack-plugin": "6.3.3",
    "husky": "7.0.2",
    "jest": "27.2.1",
    "lint-staged": "11.1.2",
    "mini-css-extract-plugin": "2.3.0",
    "prettier": "2.4.1",
    "react-hot-loader": "4.13.0",
    "sass": "1.42.1",
    "sass-loader": "12.1.0",
    "style-loader": "3.3.0",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-sass-guidelines": "8.0.0",
    "stylelint-webpack-plugin": "3.0.1",
    "ts-node": "10.2.1",
    "typescript": "4.4.3",
    "webpack": "5.53.0",
    "webpack-cli": "4.8.0",
    "webpack-dev-server": "4.2.1",
    "webpack-merge": "5.8.0"
  },
  "lint-staged": {
    "*.js|jsx|ts|tsx": "eslint --cache --fix",
    "*.scss": "stylelint --syntax=scss --fix",
    "*": "prettier --ignore-unknown --write"
  }
}
